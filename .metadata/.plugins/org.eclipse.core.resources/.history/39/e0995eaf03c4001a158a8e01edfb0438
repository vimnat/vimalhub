package org.greenstech;

import java.util.Scanner;

public class AssigString {

	public static void main(String[] args) {
		
	//QUESTION 1:
	//	Description: Find the length of the below string
		String s="Greens Technology";
		System.out.println(s.length());
		System.out.println(s.charAt(1));
		String a="SeleniumAutomationtool";
		System.out.println(a.length());
		String b="velmurugan";
		System.out.println(b.length());
		String c="j a v a p r o g r a m";
		System.out.println(c.length());
		String d="9095484678";
		System.out.println(d.length());
		
		//QUESTION 2:
		//	Find the particular character index  in the given string
		//Find the last index of o
		String e="GreensTechnology";
		System.out.println(e.lastIndexOf("o")+ " -last index of "+e);
		String f="SeleniumAutomationtool ";
		System.out.println(f.lastIndexOf("o")+ " -last index of "+f);
		String g="Velmurugan ";
		System.out.println(g.indexOf("n")+ " -index of "+g);
		String h="j a v a p r o g r a m";
		System.out.println(h.lastIndexOf(" ")+ " -last index of "+h);
		String z="9095484678 ";
		System.out.println(z.lastIndexOf("8")+ " - last index of"+z);
		
		//Question 4:
		//Description : Get two input from user and check the equality
        //: print in the output whether it is Equal or not
		System.out.println("Enter the first word");
		Scanner sc=new Scanner(System.in);
		String j=sc.nextLine();
		System.out.println("Enter the second word");
		String k=sc.nextLine();
		System.out.println(j);
		System.out.println(k);
		j.equalsIgnoreCase(k);
		if(j.contentEquals(k)) {
			System.out.println("both words are equal");
		}
		else {
			System.out.println("not equal");
		}
		System.out.println("Both words are equal ingnoring cases: " +j.equalsIgnoreCase(k));
		
		//Question 4:
		//Description : Get the email id from the user and verify '@' is present or not?
		System.out.println("Enter the mail address: ");
		String l=sc.nextLine();
		for(int i=l.length()-1;i>=0;i--) {
			char ch=l.charAt(i);
			System.out.print(ch);
			if(l.contentEquals("@")) {
				System.out.println("Valid mail id");
			}
			else {
				System.out.println("Not a valid mail id");
			}
			
			
		}	
	}

}
