		//QUESTION 16:
		//Description: Replace all vowels char into '@'

		String sc1="Welcome to java class";
		int k=0;
		int h=0;
		int l=0;
		String sc3 = null;
		for(int i=0;i<sc1.length();i++) {
			Character sc2=sc1.charAt(i);
			if (sc2.equals('a')&&sc2.equals('e')||sc2.equals('i')||sc2.equals('o')||sc2.equals('u')) {
				k++;
				sc3=sc1.replace(Character.toString(sc2), "@");
				System.out.println(sc3);
			}
			/*else if(sc2.equals(' ')) {
				h++;
			}
			else {
				l++;
			}
		}*/
		System.out.println("Total number of vowels: "+k);
		System.out.println("Total number of consonants: "+l);
		System.out.println("Total number of spaces: "+h);
		System.out.println(sc3);
	}

